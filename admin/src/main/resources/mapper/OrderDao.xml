<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ant.admin.dao.OrderDao">

    <select id="selectOrderList" resultType="com.ant.admin.entity.Order">
        SELECT
        order.*,c.category_name
        FROM
        t_order order
        LEFT JOIN t_product product ON order.product_id = product.product_id
        LEFT JOIN t_category c on c.category_id = product.category_id
        <where> 1=1 and order.del_flag = 0 ${ew.sqlSegment}</where>
    </select>

